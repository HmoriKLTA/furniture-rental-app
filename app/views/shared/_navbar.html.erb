<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to "/furnitures", class: "navbar-brand" do %>
      <div>
        <%= image_tag "logo2.jpg" %>
        <span>Homie</span>
      </div>
    <% end %>
  </div>
  <div class="search-form row justify-content-center">
    <div class="col-sm-8 mx-1 my-3">
      <%= form_with url: furnitures_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :q,
            params[:q],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <% end %>
    </div>
  </div>
</div>
