<h2 class="text-center my-4">Log in</h2>
<div class="container">
  <div class="row">
    <div class="col-4 offset-4 my-5">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
            required: false,
            autofocus: true,
            input_html: { class: "form-control rounded-pill", autocomplete: "email" } %>
          <%= f.input :password,
                required: false,
                input_html: { class: "form-control rounded-pill", autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions w-100">
          <%= f.button :submit, "Log in", class: "btn btn-success mb-2" %>
        </div>
      <% end %>
      <div class="">
        <%= render "devise/shared/links"%>
      </div>
    </div>
  </div>
</div>
