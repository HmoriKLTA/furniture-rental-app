<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path('banner.webp') %>);">
  <div class="container">
    <h1><strong>Welcome to Rent furnitures app</strong> </h1>
    <p><strong>Rent furnitures</strong>!</p>
  </div>
</div>
<div class="container">
  <div class="d-flex justify-content-between align-items-center m-3">
    <h1>Furnitures</h1>
  </div>
  <div class="category-list mx-auto p-2">
    <a class="btn btn-light rounded-pill border-1 border-dark-subtle " href="/furnitures?category=mirror">Mirrors</a>
    <a class="btn btn-light rounded-pill border-1 border-dark-subtle " href="/furnitures?category=garden">Gardens</a>
    <a class="btn btn-light rounded-pill border-1 border-dark-subtle " href="/furnitures?category=lamp">Lamps</a>
    <a class="btn btn-light rounded-pill border-1 border-dark-subtle " href="/furnitures?category=matress">Matresses</a>
    <a class="btn btn-light rounded-pill border-1 border-dark-subtle " href="/furnitures?category=tv table">Tv-stand</a>
    <a class="btn btn-light rounded-pill border-1 border-dark-subtle " href="/furnitures?category=wardrove">Wardrobes</a>
  </div>
  <div class="cards mt-4">
    <% @furnitures.each do |furniture| %>
      <div class="card-trip mb-4" style="width:340px">
        <%=image_tag cl_image_path("#{furniture.photo.key}", width: 280, height: 250,  crop: :fill), alt: ""%>
        <div class="card-trip-infos">
          <div><%= furniture.name %></div>
          <div>Â¥<%= furniture.price %></div>
        </div>
        <%= link_to '', furniture_path(furniture), class:"card-link" %>
      </div>
    <% end %>
  </div>
  <div class="pages-list"><%= paginate @furnitures %></div>
</div>